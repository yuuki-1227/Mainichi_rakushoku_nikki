<main class = "main">
  <div class="main__blog">
    <h3 class = "main__blog--heading">
      ユーザー編集
    </h3>
    <div class="main__blog--edit">
      <table>
        <tr>
          <td><%= attachment_image_tag @end_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
          <td><%= @end_user.last_name + @end_user.first_name %></td>
          <td><%= @end_user.introduction %></td>
        </tr>
      </table>
      <%= form_with model:@end_user,url: admin_end_user_path, local:true do |f| %>
        <div class="form-group">
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会" %>
        </div>
        <div class="form-group">
          <%= f.submit '更新', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</main>