<main class = "main">
  <div class="main__blog">
    <h3 class = "main__blog--heading">
        ユーザー一覧
    </h3>
    <div class="main__blog--index">
      <table>
        <tr>
          <th></th>
          <th>名前</th>
          <th></th>
          <th></th>
        </tr>
        <% @end_users.each do |end_user| %>
        <tr>
          <td>
            <%= link_to admin_end_user_path(end_user) do %>
            <%= attachment_image_tag end_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= end_user.last_name + end_user.first_name %></td>
          <td><%= end_user.introduction %></td>
          <td>
            <% if end_user.is_deleted == false %>
              <p class ="available">有効</p>
            <% else %>
              <p class ="invalid">退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</main>