<%= form_with model: @genre,url: admin_genres_path,local: true do |f| %>
  <table>
    <tr class="field">
      <label for="genre_title">ジャンル名</label>
      <%= f.text_field :name, autofocus: true, class: "genre_name" %>
    </tr>
    <tr class="actions">
      <%= f.submit "新規登録" ,class: 'btn btn-sm btn-success genre-btn' %>
    </tr>
  </table>
<% end %>

<h1>ユーザー一覧</h1>

<table>
  <tr>
    <th></th>
    <th>名前</th>
    <th></th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
  <tr>
    <td><%= genre.name %></td>
    <td><%= link_to '編集', edit_admin_genre_path(genre) %></td>
  </tr>
  <% end %>
</table>