<main class = "main">
  <div class="main__blog">
    <h3 class = "main__blog--heading">
      投稿一覧
    </h3>
    <div class="main__blog--index">
      <table>
        <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to admin_post_path(post) do %>
              <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.three_meals %></td>
          <td><%= post.explain %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</main>
