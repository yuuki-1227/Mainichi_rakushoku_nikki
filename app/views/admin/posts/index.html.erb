<h1>投稿一覧</h1>

<table>
  <tr>
    <th></th>
    <th>名前</th>
    <th></th>
    <th></th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td>
      <%= link_to admin_post_path(post) do %>
        <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
      <% end %>
    </td>
    <td><%= post.tile %></td>
    <td><%= post.explain %></td>
  </tr>
  <% end %>
</table>
