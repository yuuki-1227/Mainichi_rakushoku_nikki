<table>
  <% posts.each do |post| %>
    <% if current_end_user.blank? %>
      <% if post.release_status == true %>
        <tr>
          <td>
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.explain %></td>
        </tr>
      <% end %>
    <% else %>
      <% if post.end_user_id == current_end_user.id %>
        <tr>
          <td>
            <%= link_to post_path(post) do %>
              <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= post.title %></td>
          <td><%= post.explain %></td>
        </tr>
      <% else %>
        <% if post.release_status == true %>
          <tr>
            <td>
              <%= link_to post_path(post) do %>
                <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
              <% end %>
            </td>
            <td><%= post.title %></td>
            <td><%= post.explain %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</table>