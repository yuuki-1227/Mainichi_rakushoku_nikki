<h2>新規投稿</h2>
<%= form_with model:@post,local:true do |f| %>

  <div class="form-group">
    <%= f.label :start_time %>
    <%= f.date_select :start_time, class: 'form-control datetime' %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control post_title' %>
  </div>
  <div class="form-group">
    <%= f.label :tag %>
    <%= f.text_area :name, :placeholder => "スペースを入力することで複数のタグを付けることができます。", class: 'form-control post_tag' %>
  </div>
  <div class="form-group">
    <%= f.label :explain %>
    <%= f.text_area :explain, class: 'form-control post_explain' %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.attachment_field :image, class: 'form-control post_image' %>
  </div>
  <div class="form-group">
    <%= f.label :three_meals %>
    <%= f.select :three_meals, Post.three_meals.keys, class: 'form-control post_image' %>
  </div>
  <div class="form-group">
    <%= f.label :cooking_method %>
    <%= f.text_area :cooking_method, class: 'form-control post_cooking_method' %>
  </div>

  <div id="star">
    <label>Rating</label>
  </div>

  <script>
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    scoreName: 'post[rate]',
    half: true,
  });
  </script>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>