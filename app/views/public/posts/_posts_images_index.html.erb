<div class="image-index">
  <% posts.each do |post| %>
    <% if current_end_user.blank? %>
      <% if post.release_status == true %>
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <% end %>
      <% end %>
    <% else %>
      <% if post.end_user_id != current_end_user.id %>
        <% if post.release_status == true %>
          <%= link_to post_path(post) do %>
            <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to post_path(post) do %>
          <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no_image.jpg" %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>