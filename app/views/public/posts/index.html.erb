<div class = "heading-title">
  <p>ユーザー情報</p>
</div>
<div class = "user-info">
  <%= render 'public/end_users/info', end_user: current_end_user %>
</div>
<div class = "heading-title">
  <p>投稿一覧</p>
</div>
<div class = "tag-list">
  <p>タグリスト</p>
  <% @tag_list.each do |list| %>
    <%= link_to list.name, tag_posts_path(tag_id: list.id) %>
    <%= "(#{list.posts.count})" %>
  <% end %>
</div>
<div class = "link">
  <%= link_to '投稿順', posts_path %>
  <%= link_to 'いいね数順', posts_favorited_ranking_path %>
  <%= link_to 'コメント数順', posts_commented_ranking_path %>
</div>
<div class = "post-index">
  <%= render 'index', posts: @posts %>
</div>